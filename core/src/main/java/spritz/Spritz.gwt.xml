<module>
  <inherits name='org.realityforge.braincheck.BrainCheck'/>
  <inherits name='elemental2.dom.Dom'/>

  <source path='' includes='*.java'/>
  <source path='dom' includes='**/*.java'/>

  <!--
    These properties are all defined in spritz.SpritzConfig
    See that class for a better understanding of what these properties do.
  -->

  <define-property name='spritz.environment' values='development,production'/>
  <set-property name='spritz.environment' value='production'/>

  <define-property name='spritz.enable_names' values='true,false'/>
  <set-property name='spritz.enable_names' value='false'/>

  <define-property name='spritz.validate_subscriptions' values='true,false'/>
  <set-property name='spritz.validate_subscriptions' value='false'/>

  <define-property name='spritz.purge_tasks_when_runaway_detected' values='true,false'/>
  <set-property name='spritz.purge_tasks_when_runaway_detected' value='true'/>

  <define-property name='spritz.enable_uncaught_error_handlers' values='true,false'/>
  <set-property name='spritz.enable_uncaught_error_handlers' value='false'/>

  <define-property name='spritz.logger' values='console_js,proxy,none'/>
  <set-property name='spritz.logger' value='console_js'/>
</module>
